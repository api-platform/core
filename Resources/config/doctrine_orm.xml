<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="dunglas_json_ld_api.doctrine.metadata_factory" class="Doctrine\Common\Persistence\Mapping\ClassMetadataFactory" public="false">
            <factory service="doctrine.orm.default_entity_manager" method="getMetadataFactory" />
        </service>

        <service id="dunglas_json_ld_api.event_subscriber.doctrine" class="Dunglas\JsonLdApiBundle\Doctrine\EventSubscriber">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="doctrine" />

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="dunglas_json_ld_api.data_provider.doctrine.orm" class="Dunglas\JsonLdApiBundle\Doctrine\Orm\DataProvider" public="false" abstract="true">
            <argument type="service" id="doctrine" />
        </service>
    </services>

</container>
