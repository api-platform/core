<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="api.item_data_provider" alias="api.doctrine.orm.default.item_data_provider" />
        <service id="api.collection_data_provider" alias="api.doctrine.orm.default.collection_data_provider" />

        <service id="api.doctrine.metadata_factory" class="Doctrine\Common\Persistence\Mapping\ClassMetadataFactory" public="false">
            <factory service="doctrine.orm.default_entity_manager" method="getMetadataFactory" />
        </service>

        <service id="api.doctrine.orm.collection_data_provider" public="false" abstract="true">
            <argument type="service" id="doctrine" />
            <argument type="collection"></argument> <!-- extensions -->
        </service>

        <service id="api.doctrine.orm.item_data_provider" public="false" abstract="true">
            <argument type="service" id="doctrine" />
            <argument type="service" id="api.metadata.property.factory.collection" />
            <argument type="service" id="api.metadata.property.factory.item" />
            <argument type="collection"></argument> <!-- extensions -->
        </service>

        <service id="api.doctrine.orm.default.collection_data_provider" parent="api.doctrine.orm.collection_data_provider" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\CollectionDataProvider" />
        <service id="api.doctrine.orm.default.item_data_provider" parent="api.doctrine.orm.item_data_provider" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\ItemDataProvider" />

        <!-- Filter -->

        <service id="api.doctrine.orm.search_filter" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\Filter\SearchFilter" public="false" abstract="true">
            <argument type="service" id="doctrine" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="api.iri_converter" />
            <argument type="service" id="api.property_accessor" />
        </service>

        <service id="api.doctrine.orm.order_filter" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\Filter\OrderFilter" public="false" abstract="true">
            <argument type="service" id="doctrine" />
            <argument type="service" id="request_stack" />
            <argument>%api.collection.order_parameter_name%</argument>
        </service>

        <service id="api.doctrine.orm.range_filter" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\Filter\RangeFilter" public="false" abstract="true">
            <argument type="service" id="doctrine" />
            <argument type="service" id="request_stack" />
        </service>

        <service id="api.doctrine.orm.date_filter" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\Filter\DateFilter" public="false" abstract="true">
            <argument type="service" id="doctrine" />
            <argument type="service" id="request_stack" />
        </service>

        <!-- Metadata loader -->

        <service id="api.doctrine.orm.metadata.property.factory.item" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\Metadata\Property\ItemMetadataFactory" decorates="api.metadata.property.factory.item" public="false">
            <argument type="service" id="doctrine" />
            <argument type="service" id="api.doctrine.orm.metadata.property.factory.item.inner" />
        </service>

        <!-- Event listener -->

        <service id="api.doctrine.listener.view.manager" class="Dunglas\ApiBundle\Bridge\Doctrine\EventListener\ManagerViewListener">
            <argument type="service" id="doctrine" />

            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView" priority="10" />
        </service>

        <!-- Doctrine Query extensions -->

        <service id="api.doctrine.orm.query_extension.eager_loading" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\Extension\EagerLoadingExtension" public="false">
            <tag name="api.doctrine.orm.query_extension.item" />
            <tag name="api.doctrine.orm.query_extension.collection" />
        </service>

        <service id="api.doctrine.orm.query_extension.filter" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\Extension\FilterExtension" public="false">
            <argument type="service" id="api.metadata.resource.factory.item" />
            <argument type="service" id="api.filters" />

            <tag name="api.doctrine.orm.query_extension.collection" />
        </service>

        <service id="api.doctrine.orm.query_extension.pagination" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\Extension\PaginationExtension" public="false">
            <argument type="service" id="doctrine" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="api.metadata.resource.factory.item" />
            <argument>%api.collection.pagination.enabled%</argument>
            <argument>%api.collection.pagination.client_enabled%</argument>
            <argument>%api.collection.pagination.client_items_per_page%</argument>
            <argument>%api.collection.pagination.items_per_page%</argument>
            <argument>%api.collection.pagination.page_parameter_name%</argument>
            <argument>%api.collection.pagination.enabled_parameter_name%</argument>
            <argument>%api.collection.pagination.items_per_page_parameter_name%</argument>

            <tag name="api.doctrine.orm.query_extension.collection" />
        </service>

        <service id="api.doctrine.orm.query_extension.order" class="Dunglas\ApiBundle\Bridge\Doctrine\Orm\Extension\OrderExtension" public="false">
            <argument>%api.collection.order%</argument>

            <tag name="api.doctrine.orm.query_extension.collection" />
        </service>
    </services>

</container>
