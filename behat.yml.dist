default:
  suites:
    default:
      contexts:
        - 'FeatureContext': { doctrine: '@doctrine' }
        - 'JsonContext'
        - 'HydraContext'
        - 'SwaggerContext'
        - 'HttpCacheContext'
        - 'Behat\MinkExtension\Context\MinkContext'
        - 'Behatch\Context\RestContext'
      filters:
        tags: ~@postgres
  extensions:
    'Behat\Symfony2Extension':
      kernel:
        env: '%env(APP_ENV)%'
        debug: 'true'
        path: 'tests/Fixtures/app/AppKernel.php'
        bootstrap: 'tests/Fixtures/app/bootstrap.php'
    'Behat\MinkExtension':
      base_url: "http://example.com/"
      sessions:
        default:
          symfony2: ~
    'Behatch\Extension': ~

coverage:
  suites:
    default:
      contexts:
        - 'FeatureContext': { doctrine: '@doctrine' }
        - 'JsonContext'
        - 'HydraContext'
        - 'SwaggerContext'
        - 'HttpCacheContext'
        - 'CoverageContext'
        - 'Behat\MinkExtension\Context\MinkContext'
        - 'Behatch\Context\RestContext'
