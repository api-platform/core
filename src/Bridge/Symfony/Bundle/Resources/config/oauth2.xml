<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- OAuth2 config -->

        <service id="api_platform.oauth2.oauth2_config"
                 class="ApiPlatform\Core\OAuth2\Config\OAuth2Config"
                 public="false">
            <argument>%api_platform.oauth2.enabled%</argument>
            <argument>%api_platform.oauth2.clientId%</argument>
            <argument>%api_platform.oauth2.clientSecret%</argument>
            <argument>%api_platform.oauth2.type%</argument>
            <argument>%api_platform.oauth2.flow%</argument>
            <argument>%api_platform.oauth2.tokenUrl%</argument>
            <argument>%api_platform.oauth2.authorizationUrl%</argument>
            <argument>%api_platform.oauth2.scopes%</argument>
        </service>

    </services>

</container>
