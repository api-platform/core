<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="api_platform.item_data_provider" alias="api_platform.doctrine.mongodb.default.item_data_provider" />
        <service id="api_platform.collection_data_provider" alias="api_platform.doctrine.mongodb.default.collection_data_provider" />

        <service id="api_platform.doctrine.metadata_factory" class="Doctrine\Common\Persistence\Mapping\ClassMetadataFactory" public="false">
            <factory service="doctrine_mongodb.odm.default_document_manager" method="getMetadataFactory" />
        </service>

        <service id="api_platform.doctrine.mongodb.collection_data_provider" public="false" abstract="true">
            <argument type="service" id="doctrine_mongodb" />
            <argument type="collection"></argument> <!-- extensions -->
        </service>

        <service id="api_platform.doctrine.mongodb.item_data_provider" public="false" abstract="true">
            <argument type="service" id="doctrine_mongodb" />
            <argument type="service" id="api_platform.metadata.property.name_collection_factory" />
            <argument type="service" id="api_platform.metadata.property.metadata_factory" />
            <argument type="collection"></argument> <!-- extensions -->
        </service>

        <service id="api_platform.doctrine.mongodb.default.collection_data_provider" parent="api_platform.doctrine.mongodb.collection_data_provider" class="ApiPlatform\Core\Bridge\Doctrine\MongoDB\CollectionDataProvider" />
        <service id="api_platform.doctrine.mongodb.default.item_data_provider" parent="api_platform.doctrine.mongodb.item_data_provider" class="ApiPlatform\Core\Bridge\Doctrine\MongoDB\ItemDataProvider" />

        <!-- Filter -->

