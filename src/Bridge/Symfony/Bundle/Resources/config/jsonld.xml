<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="api.jsonld.entrypoint_builder" class="ApiPlatform\Builder\JsonLd\EntrypointBuilder" public="false">
            <argument type="service" id="api.metadata.resource.factory.collection" />
            <argument type="service" id="api.metadata.resource.factory.item" />
            <argument type="service" id="api.iri_converter" />
            <argument type="service" id="api.router" />
        </service>

        <service id="api.jsonld.context_builder" class="ApiPlatform\Builder\JsonLd\ContextBuilder" public="false">
            <argument type="service" id="api.metadata.resource.factory.collection" />
            <argument type="service" id="api.metadata.resource.factory.item" />
            <argument type="service" id="api.metadata.property.factory.collection" />
            <argument type="service" id="api.metadata.property.factory.item" />
            <argument type="service" id="api.router" />
        </service>

        <!-- Serializer -->

        <service id="api.jsonld.normalizer.item" class="ApiPlatform\Builder\JsonLd\Serializer\ItemNormalizer" public="false">
            <argument type="service" id="api.metadata.resource.factory.item" />
            <argument type="service" id="api.metadata.property.factory.collection" />
            <argument type="service" id="api.metadata.property.factory.item" />
            <argument type="service" id="api.iri_converter" />
            <argument type="service" id="api.resource_class_resolver" />
            <argument type="service" id="api.jsonld.context_builder" />
            <argument type="service" id="api.property_accessor" />
            <argument type="service" id="api.name_converter" on-invalid="ignore" />

            <tag name="serializer.normalizer" />
        </service>

        <service id="api.jsonld.normalizer.datetime" class="ApiPlatform\Builder\JsonLd\Serializer\DateTimeNormalizer" public="false">
            <tag name="serializer.normalizer" priority="50" />
        </service>

        <service id="api.jsonld.encoder" class="ApiPlatform\Builder\JsonLd\Serializer\JsonLdEncoder" public="false">
            <tag name="serializer.encoder" />
        </service>

        <!-- Event listeners -->

        <service id="api.jsonld.listener.view.responder" class="ApiPlatform\Builder\JsonLd\EventListener\ResponderViewListener">
            <argument type="service" id="api.serializer" />

            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView" />
        </service>

        <!-- Action -->

        <service id="api.jsonld.action.context" class="ApiPlatform\Builder\JsonLd\Action\ContextAction">
            <argument type="service" id="api.jsonld.context_builder" />
            <argument type="service" id="api.metadata.resource.factory.collection" />
            <argument type="service" id="api.metadata.resource.factory.item" />
        </service>

        <service id="api.jsonld.action.entrypoint" class="ApiPlatform\Builder\JsonLd\Action\EntrypointAction">
            <argument type="service" id="api.jsonld.entrypoint_builder" />
        </service>
    </services>

</container>
