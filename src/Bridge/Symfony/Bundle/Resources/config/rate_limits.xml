<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="api_platform.listener.rate_limit" class="ApiPlatform\Core\RateLimit\RateLimitListener" public="false">
            <argument type="service" id="request_stack"/>
        </service>
        <service id="ApiPlatform\Core\RateLimit\RateLimitListenerInterface" alias="api_platform.listener.rate_limit" />

        <service id="api_platform.rate_limit.limiter.ip_address" class="ApiPlatform\Core\RateLimit\Limiter\PerIpRateLimiter">
            <tag name="api_platform.rate_limiter"/>
            <tag name="api_platform.rate_limiter.core"/>
        </service>
    </services>

</container>
